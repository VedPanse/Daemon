{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://daemon.local/schema/daemon.schema.v0_1.json",
  "title": "DAEMON Manifest v0.1",
  "type": "object",
  "additionalProperties": false,
  "required": ["daemon_version", "device", "commands", "telemetry", "transport"],
  "properties": {
    "daemon_version": { "type": "string", "const": "0.1" },
    "device": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "version", "node_id"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "version": { "type": "string", "minLength": 1 },
        "node_id": { "type": "string", "minLength": 1 }
      }
    },
    "commands": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["token", "description", "args", "safety", "nlp"],
        "properties": {
          "token": { "type": "string", "pattern": "^[A-Z0-9_]+$" },
          "description": { "type": "string", "minLength": 1 },
          "args": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["name", "type", "required"],
              "properties": {
                "name": { "type": "string", "minLength": 1 },
                "type": { "type": "string", "enum": ["int", "float", "bool", "string"] },
                "min": { "type": ["number", "null"] },
                "max": { "type": ["number", "null"] },
                "required": { "type": "boolean" }
              }
            }
          },
          "safety": {
            "type": "object",
            "additionalProperties": false,
            "required": ["rate_limit_hz", "watchdog_ms", "clamp"],
            "properties": {
              "rate_limit_hz": { "type": "integer", "minimum": 1 },
              "watchdog_ms": { "type": "integer", "minimum": 1 },
              "clamp": { "type": "boolean" }
            }
          },
          "nlp": {
            "type": "object",
            "additionalProperties": false,
            "required": ["synonyms", "examples"],
            "properties": {
              "synonyms": {
                "type": "array",
                "items": { "type": "string" }
              },
              "examples": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "telemetry": {
      "type": "object",
      "additionalProperties": false,
      "required": ["keys"],
      "properties": {
        "keys": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "type"],
            "properties": {
              "name": { "type": "string", "minLength": 1 },
              "type": { "type": "string", "enum": ["int", "float", "bool", "string"] },
              "unit": { "type": "string" }
            }
          }
        }
      }
    },
    "transport": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type"],
      "properties": {
        "type": { "type": "string", "const": "serial-line-v1" }
      }
    }
  }
}
